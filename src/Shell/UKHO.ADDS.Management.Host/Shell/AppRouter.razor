@using UKHO.ADDS.Management.Modules.Samples.Pages
@using UKHO.ADDS.Management.Modules.FileShare.Pages
@using UKHO.ADDS.Management.Modules.Permit.Pages

<Router AppAssembly="typeof(App).Assembly"
        AdditionalAssemblies="new[] { typeof(SamplePage).Assembly, typeof(FileSharePage).Assembly, typeof(PermitPage).Assembly }">

    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(ShellLayout)">
            <NotAuthorized>
                <LayoutView Layout="typeof(ShellLayout)">
                    <AccessDenied />
                </LayoutView>
            </NotAuthorized>
            <Authorizing>
                <RadzenText>Authorizing...</RadzenText>
            </Authorizing>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(ShellLayout)">
            <RadzenText TextStyle="TextStyle.DisplayH1" TagName="TagName.H1" class="rz-my-12">
                Page not found
            </RadzenText>
            <RadzenText TextStyle="TextStyle.DisplayH5" class="rz-my-12">
                Sorry, but there's nothing here!
            </RadzenText>
        </LayoutView>
    </NotFound>
</Router>
